<Application x:Class="WindowzTabManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:WindowzTabManager.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="Styles/TabStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:PathToIconConverter x:Key="PathToIconConverter"/>
            <converters:StringEqualsConverter x:Key="StringEqualsConverter"/>
            <converters:AdminStatusConverter x:Key="AdminStatusConverter"/>
            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
            <converters:BackgroundColorPreviewConverter x:Key="BackgroundColorPreviewConverter"/>

            <!-- Wind 由来のダークパレット (Windowz 既存キーも互換維持) -->
            <Color x:Key="ApplicationBackground">#1F2024</Color>
            <Color x:Key="TitleBarBackground">#23252B</Color>
            <Color x:Key="ControlFillColorDefault">#2A2D33</Color>
            <Color x:Key="ControlFillColorSecondary">#333742</Color>
            <Color x:Key="ControlFillColorTertiary">#3D424E</Color>
            <Color x:Key="AccentFillColorDefault">#4AA3FF</Color>
            <Color x:Key="TextFillColorPrimary">#F3F4F6</Color>
            <Color x:Key="TextFillColorSecondary">#C3C8D2</Color>
            <Color x:Key="TextFillColorTertiary">#8D93A0</Color>
            <Color x:Key="ControlStrokeColorDefault">#3C414E</Color>
            <Color x:Key="MenuBackgroundColor">#2A2E37</Color>

            <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="{StaticResource ApplicationBackground}" />
            <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="{StaticResource TitleBarBackground}" />
            <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="{StaticResource ControlFillColorDefault}" />
            <SolidColorBrush x:Key="ControlFillColorSecondaryBrush" Color="{StaticResource ControlFillColorSecondary}" />
            <SolidColorBrush x:Key="ControlFillColorTertiaryBrush" Color="{StaticResource ControlFillColorTertiary}" />
            <SolidColorBrush x:Key="AccentFillColorDefaultBrush" Color="{StaticResource AccentFillColorDefault}" />
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="{StaticResource TextFillColorPrimary}" />
            <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="{StaticResource TextFillColorSecondary}" />
            <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="{StaticResource TextFillColorTertiary}" />
            <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="{StaticResource ControlStrokeColorDefault}" />
            <SolidColorBrush x:Key="MenuBackground" Color="{StaticResource MenuBackgroundColor}" />

            <!-- 既存キー互換 -->
            <Color x:Key="SidebarBg">#1F2024</Color>
            <Color x:Key="TabActiveBg">#2A2D33</Color>
            <Color x:Key="TabHoverBg">#333742</Color>
            <Color x:Key="AccentBlue">#4AA3FF</Color>
            <Color x:Key="TextPrimary">#C3C8D2</Color>
            <Color x:Key="TextActive">#F3F4F6</Color>
            <Color x:Key="Separator">#3C414E</Color>

            <SolidColorBrush x:Key="SidebarBgBrush" Color="{StaticResource SidebarBg}" />
            <SolidColorBrush x:Key="TabActiveBgBrush" Color="{StaticResource TabActiveBg}" />
            <SolidColorBrush x:Key="TabHoverBgBrush" Color="{StaticResource TabHoverBg}" />
            <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}" />
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
            <SolidColorBrush x:Key="TextActiveBrush" Color="{StaticResource TextActive}" />
            <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource Separator}" />

            <!-- スクロールバーを非表示にするスタイル -->
            <Style x:Key="HiddenScrollBar" TargetType="ScrollBar">
                <Setter Property="Width" Value="0"/>
            </Style>
            <Style x:Key="SidebarScrollViewer" TargetType="ScrollViewer">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollViewer">
                            <Grid>
                                <ScrollContentPresenter/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

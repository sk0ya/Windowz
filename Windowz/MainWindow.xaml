<Window x:Class="WindowzTabManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:views="clr-namespace:WindowzTabManager.Views"
        xmlns:converters="clr-namespace:WindowzTabManager.Converters"
        mc:Ignorable="d"
        Title="Wind"
        Icon="pack://application:,,,/Windowz.ico"
        Height="700" Width="1200"
        MinHeight="400" MinWidth="600"
        
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        StateChanged="Window_StateChanged"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewMouseDown="Window_PreviewMouseDown">
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="0" CaptionHeight="0"
                      GlassFrameThickness="0" CornerRadius="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <converters:ColorToBrushConverter x:Key="ColorToBrush"/>

        <!-- Tab accent border thickness (updated by code-behind based on tab position) -->
        <Thickness x:Key="HorizontalTabAccentThickness">0,0,0,2</Thickness>
        <Thickness x:Key="VerticalTabAccentThickness">2,0,0,0</Thickness>

        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#F1707A"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ContextMenu Style -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="{DynamicResource MenuBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- MenuItem Style -->
        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CornerRadius="3"
                                Margin="2,1"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="MenuItemIconColumnGroup"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="MenuItemShortcutColumnGroup"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter x:Name="Icon"
                                                  ContentSource="Icon"
                                                  Width="16" Height="16"
                                                  Margin="0,0,8,0"
                                                  VerticalAlignment="Center"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                <ContentPresenter x:Name="Header"
                                                  Grid.Column="1"
                                                  ContentSource="Header"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                <TextBlock x:Name="Shortcut"
                                           Grid.Column="2"
                                           Text="{TemplateBinding InputGestureText}"
                                           Margin="16,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Icon" Value="{x:Null}">
                                <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorDisabledBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Separator Style for ContextMenu -->
        <Style TargetType="Separator">
            <Setter Property="Background" Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="Margin" Value="4,4,4,4"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Background="{TemplateBinding Background}"
                                Height="{TemplateBinding Height}"
                                Margin="{TemplateBinding Margin}"
                                SnapsToDevicePixels="True"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab Item Style (horizontal mode - bottom accent) -->
        <Style x:Key="TabItemStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="{DynamicResource HorizontalTabAccentThickness}"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMultiSelected}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Tab Item Style (vertical mode - accent side set via DynamicResource) -->
        <Style x:Key="TabItemVerticalStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="{DynamicResource VerticalTabAccentThickness}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMultiSelected}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Panel templates for tab items -->
        <ItemsPanelTemplate x:Key="HorizontalTabPanel">
            <StackPanel Orientation="Horizontal"/>
        </ItemsPanelTemplate>
        <ItemsPanelTemplate x:Key="VerticalTabPanel">
            <StackPanel Orientation="Vertical"/>
        </ItemsPanelTemplate>

        <!-- Data templates for tab items -->
        <DataTemplate x:Key="HorizontalTabItemTemplate">
            <Border Style="{StaticResource TabItemStyle}"
                    Height="36"
                    MouseLeftButtonDown="TabItem_MouseLeftButtonDown"
                    MouseRightButtonUp="TabItem_MouseRightButtonUp"
                    MouseDown="TabItem_MouseDown"
                    Tag="{Binding}">
                <Border.ContextMenu>
                    <ContextMenu Tag="{Binding}" Opened="TabContextMenu_Opened">
                        <MenuItem Header="Startup に登録" Click="ToggleStartup_Click" Tag="{Binding}"/>
                        <MenuItem Header="QuickLaunch に登録" Click="ToggleQuickLaunch_Click" Tag="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="ファイルパスをコピー" Click="CopyExePath_Click" Tag="{Binding}"/>
                        <MenuItem Header="エクスプローラーで開く" Click="OpenInExplorer_Click" Tag="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="タブ名を変更" Click="RenameTab_Click" Tag="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="自動埋め込みから除外" Click="ToggleAutoEmbedExclusion_Click" Tag="{Binding}"/>
                        <Separator Tag="TileSeparator"/>
                        <MenuItem Header="タイル表示" Click="TileSelectedTabs_Click" Tag="{Binding}"/>
                        <MenuItem Header="タイル表示を解除" Click="ReleaseTile_Click" Tag="{Binding}"/>
                        <MenuItem Header="タブ管理を解除" Click="ReleaseEmbed_Click" Tag="{Binding}"/>
                        <MenuItem Header="閉じる" Click="CloseTab_Click" Tag="{Binding}"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="{Binding Icon}" Width="16" Height="16"
                           Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding DisplayTitle}" MaxWidth="120"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"
                               FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMultiSelected}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <!-- タイル表示中のインジケーター -->
                    <Border Width="5" Height="5" CornerRadius="2.5"
                            Background="{DynamicResource AccentFillColorDefaultBrush}"
                            Margin="4,0,0,0" VerticalAlignment="Center"
                            Visibility="{Binding TileLayout, Converter={StaticResource NullToVisibility}}"/>
                    <Button Background="Transparent" BorderThickness="0"
                            Padding="4" Margin="6,0,0,0"
                            Click="CloseTab_Click" Tag="{Binding}"
                            Width="20" Height="20" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsMultiSelected}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <ui:SymbolIcon Symbol="Dismiss16" FontSize="9"/>
                    </Button>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="VerticalTabItemTemplate">
            <Border Style="{StaticResource TabItemVerticalStyle}"
                    MouseLeftButtonDown="TabItem_MouseLeftButtonDown"
                    MouseRightButtonUp="TabItem_MouseRightButtonUp"
                    MouseDown="TabItem_MouseDown"
                    Tag="{Binding}">
                <Border.ContextMenu>
                    <ContextMenu Tag="{Binding}" Opened="TabContextMenu_Opened">
                        <MenuItem Header="Startup に登録" Click="ToggleStartup_Click" Tag="{Binding}"/>
                        <MenuItem Header="QuickLaunch に登録" Click="ToggleQuickLaunch_Click" Tag="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="ファイルパスをコピー" Click="CopyExePath_Click" Tag="{Binding}"/>
                        <MenuItem Header="エクスプローラーで開く" Click="OpenInExplorer_Click" Tag="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="タブ名を変更" Click="RenameTab_Click" Tag="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="自動埋め込みから除外" Click="ToggleAutoEmbedExclusion_Click" Tag="{Binding}"/>
                        <Separator Tag="TileSeparator"/>
                        <MenuItem Header="タイル表示" Click="TileSelectedTabs_Click" Tag="{Binding}"/>
                        <MenuItem Header="タイル表示を解除" Click="ReleaseTile_Click" Tag="{Binding}"/>
                        <MenuItem Header="タブ管理を解除" Click="ReleaseEmbed_Click" Tag="{Binding}"/>
                        <MenuItem Header="閉じる" Click="CloseTab_Click" Tag="{Binding}"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{Binding Icon}" Width="16" Height="16"
                           Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding DisplayTitle}" MaxWidth="140"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"
                               FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMultiSelected}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <!-- タイル表示中のインジケーター -->
                    <Border Grid.Column="2" Width="5" Height="5" CornerRadius="2.5"
                            Background="{DynamicResource AccentFillColorDefaultBrush}"
                            Margin="4,0,0,0" VerticalAlignment="Center"
                            Visibility="{Binding TileLayout, Converter={StaticResource NullToVisibility}}"/>
                    <Button Grid.Column="3" Background="Transparent" BorderThickness="0"
                            Padding="4" Margin="6,0,0,0"
                            Click="CloseTab_Click" Tag="{Binding}"
                            Width="20" Height="20" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsMultiSelected}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource TextOnAccentFillColorPrimaryBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <ui:SymbolIcon Symbol="Dismiss16" FontSize="9"/>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>
        <!-- Collapsed vertical tab template (icon only, for collapsed sidebar) -->
        <DataTemplate x:Key="CollapsedVerticalTabItemTemplate">
            <Border Style="{StaticResource TabItemVerticalStyle}"
                    MouseLeftButtonDown="TabItem_MouseLeftButtonDown"
                    MouseRightButtonUp="TabItem_MouseRightButtonUp"
                    MouseDown="TabItem_MouseDown"
                    Tag="{Binding}"
                    HorizontalAlignment="Center"
                    Padding="8,6">
                <Border.ContextMenu>
                    <ContextMenu Tag="{Binding}" Opened="TabContextMenu_Opened">
                        <MenuItem Header="Startup に登録" Click="ToggleStartup_Click" Tag="{Binding}"/>
                        <MenuItem Header="QuickLaunch に登録" Click="ToggleQuickLaunch_Click" Tag="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="ファイルパスをコピー" Click="CopyExePath_Click" Tag="{Binding}"/>
                        <MenuItem Header="エクスプローラーで開く" Click="OpenInExplorer_Click" Tag="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="タブ名を変更" Click="RenameTab_Click" Tag="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="自動埋め込みから除外" Click="ToggleAutoEmbedExclusion_Click" Tag="{Binding}"/>
                        <Separator Tag="TileSeparator"/>
                        <MenuItem Header="タイル表示" Click="TileSelectedTabs_Click" Tag="{Binding}"/>
                        <MenuItem Header="タイル表示を解除" Click="ReleaseTile_Click" Tag="{Binding}"/>
                        <MenuItem Header="タブ管理を解除" Click="ReleaseEmbed_Click" Tag="{Binding}"/>
                        <MenuItem Header="閉じる" Click="CloseTab_Click" Tag="{Binding}"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <Image Source="{Binding Icon}" Width="16" Height="16"
                       VerticalAlignment="Center" ToolTip="{Binding DisplayTitle}"/>
            </Border>
        </DataTemplate>

    </Window.Resources>

    <Border x:Name="MainBorder" BorderThickness="0" 
            UseLayoutRounding="True" SnapsToDevicePixels="True">
        <Grid x:Name="RootGrid" UseLayoutRounding="True" SnapsToDevicePixels="True">
            <!-- Row/Column definitions set by code-behind via ApplyTabHeaderPosition -->

            <!-- Tab Bar Area: contains tabs, add button, and (for left/right) window controls -->
            <Grid x:Name="TabBarArea"
                  ClipToBounds="True"
                  Background="{DynamicResource ApplicationBackgroundBrush}"
                  UseLayoutRounding="True"
                  SnapsToDevicePixels="True"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <!-- Internal row/column definitions set by code-behind -->

                <ScrollViewer x:Name="TabScrollViewer"
                              UseLayoutRounding="True"
                              SnapsToDevicePixels="True"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Disabled"
                              PreviewMouseWheel="TabScrollViewer_PreviewMouseWheel"
                              PreviewMouseLeftButtonDown="TabArea_PreviewMouseLeftButtonDown"
                  MouseRightButtonUp="TabBarEmptyArea_MouseRightButtonUp">
                    <StackPanel x:Name="TabsPanel" Orientation="Horizontal">
                        <ItemsControl x:Name="TabItemsControl" ItemsSource="{Binding Tabs}"
                                      ItemsPanel="{StaticResource HorizontalTabPanel}"
                                      ItemTemplate="{StaticResource HorizontalTabItemTemplate}"/>

                        <!-- Add Window Button -->
                        <Button x:Name="AddWindowButton" Content="+"
                                Click="AddWindowButton_Click"
                                Width="36" Height="36"
                                FontSize="16" FontWeight="Light"
                                Background="Transparent" BorderThickness="0"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Cursor="Hand"
                                ToolTip="Add Window">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- External window drag-over drop zone indicator -->
                <Border x:Name="ExternalDropZoneOverlay"
                        Panel.ZIndex="50"
                        Visibility="Collapsed"
                        IsHitTestVisible="False"
                        Background="{DynamicResource AccentFillColorDefaultBrush}"
                        Opacity="0.3"/>

                <!-- Window Control Buttons -->
                <StackPanel x:Name="WindowControlsPanel" Orientation="Horizontal">
                    <Button x:Name="MenuButton" Style="{StaticResource TitleBarButtonStyle}" Click="MenuButton_Click" ToolTip="Menu">
                        <ui:SymbolIcon Symbol="Navigation24" FontSize="12"/>
                        <Button.ContextMenu>
                            <ContextMenu x:Name="MainMenu">
                                <MenuItem Header="Webタブを開く" Click="OpenWebTab_Click">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Globe24" FontSize="14" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="設定" Click="OpenSettingsTab_Click">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Settings24" FontSize="14" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="閉じる" InputGestureText="Alt+F4" Click="CloseButton_Click">
                                    <MenuItem.Icon>
                                        <ui:SymbolIcon Symbol="Dismiss24" FontSize="14" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    <Button x:Name="MinimizeButton" Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click">
                        <ui:SymbolIcon Symbol="Subtract24" FontSize="12"/>
                    </Button>
                    <Button x:Name="MaximizeButton" Style="{StaticResource TitleBarButtonStyle}" Click="MaximizeButton_Click">
                        <ui:SymbolIcon x:Name="MaximizeIcon" Symbol="Maximize24" FontSize="12"/>
                    </Button>
                    <Button x:Name="CloseButton" Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click">
                        <ui:SymbolIcon Symbol="Dismiss24" FontSize="12"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Separator between tab bar and content (visible in Left/Right mode) -->
            <Border x:Name="TabBarSeparator" Visibility="Collapsed"
                    Background="{DynamicResource ControlStrokeColorDefaultBrush}"/>

            <!-- Content Area -->
            <Grid x:Name="ContentPanel" Background="Transparent"
                  UseLayoutRounding="True" SnapsToDevicePixels="True">
                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding SelectedTab, Converter={StaticResource NullToVisibility}, ConverterParameter=invert}"
                            IsHitTestVisible="False">
                    <ui:SymbolIcon Symbol="Window24" FontSize="48" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="Click '+' to add a window" FontSize="14" Margin="0,12,0,0"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Single Window Host Container -->
                <Border x:Name="WindowHostContainer" ClipToBounds="True" Padding="0" Margin="0"
                        Background="Transparent"
                        UseLayoutRounding="True" SnapsToDevicePixels="True"
                        Visibility="{Binding SelectedTab, Converter={StaticResource NullToVisibility}}"/>

                <!-- Content Tab Container (Settings etc.) -->
                <Border x:Name="ContentTabContainer" Visibility="Collapsed">
                    <ContentControl x:Name="ContentTabContent"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"/>
                </Border>

                <!-- Web Tab Container -->
                <Grid x:Name="WebTabContainer" Visibility="Collapsed"
                      UseLayoutRounding="True" SnapsToDevicePixels="True"/>
            </Grid>

            <!-- Window Picker Overlay -->
            <Grid x:Name="WindowPickerOverlay" 
                  Margin="10"
                  Panel.ZIndex="100"
                  Visibility="{Binding IsWindowPickerOpen, Converter={StaticResource BoolToVisibility}}">
                <Grid Background="#80000000">
                    <views:WindowPicker x:Name="WindowPickerControl"
                                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                        Margin="24" />
                </Grid>
            </Grid>

            <!-- Command Palette Overlay -->
            <Grid x:Name="CommandPaletteOverlay" 
                  Margin="10"
                  Panel.ZIndex="101"
                  Visibility="{Binding IsCommandPaletteOpen, Converter={StaticResource BoolToVisibility}}"
                  MouseLeftButtonDown="CommandPaletteOverlay_BackgroundClick">
                <Grid Background="#80000000">
                    <views:CommandPalette x:Name="CommandPaletteControl"
                                          HorizontalAlignment="Center" VerticalAlignment="Top"
                                          Margin="0,80,0,0" />
                </Grid>
            </Grid>

        </Grid>
    </Border>
</Window>

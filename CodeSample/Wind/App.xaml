<Application x:Class="Wind.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:Wind.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="Styles/TabStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:NotNullConverter x:Key="NotNullConverter"/>
            <converters:StringEqualsConverter x:Key="StringEqualsConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:PathToIconConverter x:Key="PathToIconConverter"/>
            <converters:AdminStatusConverter x:Key="AdminStatusConverter"/>
            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
            <converters:BackgroundColorPreviewConverter x:Key="BackgroundColorPreviewConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>

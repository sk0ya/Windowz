<UserControl x:Class="Wind.Views.Settings.StartupSettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:Wind.ViewModels">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16,12,16,16">
            <!-- Startup Applications -->
            <TextBlock Text="Launch Applications on Start" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <StackPanel>
                    <!-- Add new app: text input + browse + add -->
                    <Grid x:Name="AddAppArea" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ui:TextBox x:Name="StartupPathBox"
                                   Text="{Binding NewStartupPath, UpdateSourceTrigger=PropertyChanged}"
                                   PlaceholderText="URL or path to .exe"
                                   PreviewKeyDown="StartupPath_PreviewKeyDown"/>
                        <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon FolderOpen24}"
                                  Command="{Binding BrowseStartupApplicationCommand}"
                                  ToolTip="Browse..." Margin="4,0,0,0"/>
                        <ui:Button x:Name="AddAppButton" Grid.Column="2" Icon="{ui:SymbolIcon Add24}"
                                  Command="{Binding AddStartupApplicationCommand}"
                                  ToolTip="Add" Margin="4,0,0,0"/>
                    </Grid>

                    <!-- App list with inline editing -->
                    <ItemsControl ItemsSource="{Binding StartupApplications}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:StartupAppItem}">
                                <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                        CornerRadius="4" Padding="10,6" Margin="0,0,0,4">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Remove"
                                                      Command="{Binding DataContext.RemoveStartupApplicationCommand, Source={x:Reference Name=AddAppButton}}"
                                                      CommandParameter="{Binding}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- URL items: Globe icon -->
                                        <ui:SymbolIcon Symbol="Globe24" Margin="0,6,8,0"
                                               VerticalAlignment="Top" FontSize="20"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                               Visibility="{Binding IsUrl, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <!-- Non-URL items: App icon or fallback -->
                                        <Image Source="{Binding Icon}" Width="24" Height="24"
                                               Margin="0,6,8,0" VerticalAlignment="Top"
                                               RenderOptions.BitmapScalingMode="HighQuality">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Icon}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsUrl}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <ui:SymbolIcon Symbol="Apps24" Margin="0,6,8,0"
                                               VerticalAlignment="Top"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                                            <ui:SymbolIcon.Style>
                                                <Style TargetType="ui:SymbolIcon">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding Icon}" Value="{x:Null}"/>
                                                                <Condition Binding="{Binding IsUrl}" Value="False"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ui:SymbolIcon.Style>
                                        </ui:SymbolIcon>
                                        <StackPanel Grid.Column="1">
                                            <!-- Row 1: Name + Path -->
                                            <Grid Margin="0,0,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <ui:TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                           FontSize="12" MinWidth="100" MaxWidth="150"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Path}" FontSize="11"
                                                           VerticalAlignment="Center" Margin="8,0,0,0"
                                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding Path}"/>
                                            </Grid>
                                            <!-- Row 2: Args -->
                                            <ui:TextBox Text="{Binding Arguments, UpdateSourceTrigger=PropertyChanged}"
                                                       PlaceholderText="arguments"
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="No apps configured"
                               Visibility="{Binding HasNoStartupApplications, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               FontSize="12" HorizontalAlignment="Center" Margin="0,8"/>
                </StackPanel>
            </Border>

            <!-- Tile Sets Section -->
            <TextBlock Text="Tile Sets" FontSize="14" FontWeight="SemiBold" Margin="0,12,0,6"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding TileSets}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:TileSetItem}">
                                <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                        CornerRadius="4" Padding="10,8" Margin="0,0,0,6">
                                    <StackPanel>
                                        <!-- Header -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ui:SymbolIcon Symbol="Grid24" Margin="0,0,8,0"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold"
                                                       FontSize="13" VerticalAlignment="Center"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon Delete24}"
                                                      ToolTip="Remove Tile Set"
                                                      Command="{Binding DataContext.RemoveTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                        </Grid>

                                        <!-- App list - each app in its own row -->
                                        <ItemsControl ItemsSource="{Binding Apps}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                            CornerRadius="4" Padding="8,6" Margin="0,0,0,4">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Image Source="{Binding Path, Converter={StaticResource PathToIconConverter}}"
                                                                   Width="20" Height="20" Margin="0,0,8,0"
                                                                   VerticalAlignment="Center"
                                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                                            <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                                       VerticalAlignment="Center" FontSize="12"
                                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                            <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon ArrowUp24}"
                                                                      ToolTip="Move Up" Padding="4"
                                                                      Command="{Binding DataContext.MoveAppUpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                      CommandParameter="{Binding}" Margin="0,0,2,0"/>
                                                            <ui:Button Grid.Column="3" Icon="{ui:SymbolIcon ArrowDown24}"
                                                                      ToolTip="Move Down" Padding="4"
                                                                      Command="{Binding DataContext.MoveAppDownCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                      CommandParameter="{Binding}" Margin="0,0,2,0"/>
                                                            <ui:Button Grid.Column="4" Icon="{ui:SymbolIcon Dismiss24}"
                                                                      ToolTip="Remove" Padding="4"
                                                                      Command="{Binding DataContext.RemoveAppFromTileSetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                      CommandParameter="{Binding}"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Empty state -->
                                        <TextBlock Text="No apps in this tile set"
                                                   Visibility="{Binding HasNoApps, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                   FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,8"/>

                                        <!-- Add app section -->
                                        <Grid Margin="0,4,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ComboBox ItemsSource="{Binding DataContext.StartupApplications, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      Margin="0,0,6,0">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Image Source="{Binding Icon}" Width="16" Height="16"
                                                                   Margin="0,0,6,0" VerticalAlignment="Center"
                                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                            <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon Add24}"
                                                      Content="Add"
                                                      ToolTip="Add to Tile Set"
                                                      Click="AddAppToTileSet_Click"
                                                      Tag="{Binding}"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Create new tile set -->
                    <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                            CornerRadius="4" Padding="10,8" Margin="0,4,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ui:TextBox Text="{Binding NewTileSetName, UpdateSourceTrigger=PropertyChanged}"
                                       PlaceholderText="New tile set name" Margin="0,0,6,0"/>
                            <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon Add24}"
                                      Content="Create"
                                      Command="{Binding AddTileSetCommand}"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
